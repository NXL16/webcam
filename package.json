{
  "name": "webcam-project",
  "version": "1.0.2",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "40.2.1",
    "electron-builder": "^26.7.0"
  },
  "build": {
    "appId": "com.webcam.app",
    "productName": "WebcamApp",
    "asar": true,
    "asarUnpack": [
      "node_modules/ffmpeg-static/**"
    ],
    "extraResources": [
      {
        "from": "node_modules/ffmpeg-static",
        "to": "ffmpeg-static"
      }
    ],
    "win": {
      "target": "nsis"
    }
  },
  "dependencies": {
    "axios": "^1.13.5",
    "electron-is-dev": "^3.0.1",
    "ffmpeg-static": "^5.3.0",
    "form-data": "^4.0.5"
  }
}
